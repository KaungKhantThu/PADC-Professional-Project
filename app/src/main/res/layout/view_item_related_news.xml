<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2"
    android:layout_marginTop="@dimen/margin_medium_2"
    app:cardElevation="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/icons">

        <ImageView
            android:id="@+id/iv_related_news_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_img_03" />

        <ImageView
            android:id="@+id/iv_media_related_news_img"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_below="@id/iv_related_news_img"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/eleven" />

        <TextView
            android:id="@+id/tv_media_related_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_media_related_news_img"
            android:layout_below="@id/iv_related_news_img"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@id/iv_media_related_news_img"
            android:text="Eleven Media"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x" />

        <TextView
            android:id="@+id/tv_posted_date_related_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_media_related_news"
            android:layout_below="@id/tv_media_related_news"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Posted At: Jan 01 - 06:30 AM"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tv_news_detail_related_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_media_related_news_img"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="3"
            android:text="@string/dummy_news_detail"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x" />

        <TextView
            android:id="@+id/tv_status_related_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_news_detail_related_news"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="4 Likes - 5 Comments - Sent to 7 people"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_regular" />

    </RelativeLayout>
</android.support.v7.widget.CardView>